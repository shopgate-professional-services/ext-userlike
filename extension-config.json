{
  "id": "@shopgate-project/userlike",
  "version": "1.2.0-beta.1",
  "components": [
    {
      "id": "Subscribers",
      "path": "frontend/subscriptions.js",
      "type": "subscribers"
    }
  ],
  "configuration": {
    "sdkUrl": {
      "type": "admin",
      "destination": "frontend",
      "default": "",
      "params": {
        "type": "text",
        "label": "Url of userlike JavaScript sdk"
      }
    },
    "pagesWithoutWidget": {
      "type": "admin",
      "destination": "frontend",
      "default":[
        "/cart",
        "/login"
      ],
      "params": {
        "type": "json",
        "label": "Page patterns which should not have the chat widget"
      }
    },
    "iframeChatTitle": {
      "type": "admin",
      "destination": "frontend",
      "default": "Kundensupport-Chat",
      "params": {
        "type": "json",
        "label": "Specifies the title attribute of the chat iframe"
      }
    }
  }
}
